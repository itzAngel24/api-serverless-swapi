          "favoritequote": {
            "type": "string",
            "description": "Frase favorita"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha de creación"
          }
        },
        "required": ["id", "name", "height", "mass", "gender", "homeworld", "favoritequote", "createdAt"],
